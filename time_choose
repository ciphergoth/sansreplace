#!/usr/bin/env python3

import argparse
import importlib
import time

def time_test(choose, n, k, iters):
    start = time.process_time_ns()
    for _ in range(iters):
        choose(n, k)
    finish = time.process_time_ns()
    return finish - start

def test_choose(args, name, choose):
    initruns = 1
    while True:
        inittime = time_test(choose, args.n, args.k, initruns)
        if inittime * 10 >= args.test_ns:
            num_tests = args.test_ns * initruns // inittime
            break
        initruns *= 10
    res = time_test(choose, args.n, args.k, num_tests) / num_tests
    print(f"{res*0.001:10.1f}Î¼s {name}")
    return res

def parse_args():
    p = argparse.ArgumentParser()
    p.add_argument('n', type=int)
    p.add_argument('k', type=int)
    p.add_argument('--test-ns', type=int, default=1000000000)
    p.add_argument('--show-max', type=int, default=21)
    p.add_argument('--module', action='append')
    return p.parse_args()

def main():
    args = parse_args()
    modules = args.module
    if modules is None:
        modules = ['cardchoose', 'fisheryates', 'floydf2',
            'iterativechoose', 'rejectionsample', 'selbychoose']
    modules = [(m, importlib.import_module(m).choose)
        for m in modules]
    for name, choose in modules:
        test_choose(args, name, choose)

if __name__ == '__main__':
    main()
